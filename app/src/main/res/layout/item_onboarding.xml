<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="ru.android.romashkaapp.boarding.item.ItemBoardingViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ru.android.romashkaapp.boarding.item.ItemBoardingFragment">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="280dp"
            android:id="@+id/iv_image"
            android:background="@color/button_next_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_alignParentLeft="true"
            android:text="Выбирайте абонементы из списка или собирайте свои"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_text"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_alignParentLeft="true"
            android:text="Просматривайте полный список событий, или воспользуйтесь фильтрами и выберите то, что интересует вас"
            android:fontFamily="@font/roboto"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>