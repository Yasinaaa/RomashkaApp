<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="ru.android.romashkaapp.basket.BasketViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2"
        tools:context="ru.android.romashkaapp.basket.BasketFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="0dp"
                    android:layout_height="?android:actionBarSize"
                    app:title="@string/basket"
                    android:background="@android:color/white"
                    android:elevation="10dp"
                    app:navigationIcon="@drawable/ic_arrow_back"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_expire_date"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:textAlignment="viewStart"
                    android:background="@drawable/rectangle_white"
                    android:text="@string/tickets_expires_in"
                    android:fontFamily="@font/roboto"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/toolbar" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/rv_events"
                    android:paddingBottom="18dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_expire_date"
                    app:layout_constraintBottom_toTopOf="@+id/tv_order"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_order"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textAlignment="viewStart"
                    android:text="@string/order"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:padding="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="13dp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_item_seat"/>

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_item_seat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:letterSpacing="0"
                    android:gravity="center"
                    android:text="2 билета"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_order_promocode"
                    app:layout_constraintStart_toStartOf="@+id/tv_order"/>

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:letterSpacing="0"
                    android:gravity="center"
                    android:text="500 Р"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_order"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_order_promocode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:letterSpacing="0"
                    android:gravity="center"
                    android:text="@string/i_have_a_promocode"
                    android:layout_marginBottom="9dp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_order_commission"
                    app:layout_constraintStart_toStartOf="@+id/tv_order"/>

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_order_promocode_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:letterSpacing="0"
                    android:gravity="center"
                    android:text="-500 Р"
                    android:layout_marginBottom="9dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_order_commission"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_order_commission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:letterSpacing="0"
                    android:gravity="center"
                    android:text="@string/commission"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/view1"
                    app:layout_constraintStart_toStartOf="@+id/tv_order"/>

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_order_commission_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:letterSpacing="0"
                    android:gravity="center"
                    android:text="500 Р"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/view1"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <View
                    android:visibility="visible"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:id="@+id/view1"
                    android:background="@color/button_next_color"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_to_pay"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_to_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:letterSpacing="0"
                    android:gravity="center"
                    android:text="@string/to_pay"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/mb_go_to_pay"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:letterSpacing="0"
                    android:gravity="center"
                    android:text="500 Р"
                    android:layout_marginBottom="12dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/mb_go_to_pay"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/mb_g_pay"
                    app:icon="@drawable/ic_gpay_logo"
                    app:iconTint="@android:color/transparent"
                    app:iconTintMode="src_atop"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_gpay_logo"
                    app:iconPadding="7dp"
                    app:iconGravity="textEnd"
                    android:text="@string/pay"
                    android:textAllCaps="false"
                    android:fontFamily="@font/roboto_medium"
                    android:letterSpacing="0"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:backgroundTint="@android:color/darker_gray"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/mb_go_to_pay"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:onClick="@{(view)->viewModel.onClick(view)}"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/mb_go_to_pay"
                    android:text="@string/go_to_pay"
                    android:textAllCaps="false"
                    android:fontFamily="@font/roboto_medium"
                    android:letterSpacing="0"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:backgroundTint="@android:color/darker_gray"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintStart_toEndOf="@+id/mb_g_pay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:onClick="@{(view)->viewModel.onClick(view)}"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cl_bottomsheet"
            android:background="@android:color/white"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            app:behavior_skipCollapsed="true"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/tv_bottomsheet_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:letterSpacing="0"
                android:gravity="center"
                android:text="1000 P"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/mb_cart"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_bottomsheet_total_tickets_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:letterSpacing="0"
                android:gravity="center"
                android:text="2 билета"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_bottomsheet_total_price"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/mb_bottomsheet_g_pay"
                app:icon="@drawable/ic_gpay_logo"
                app:iconTint="@android:color/transparent"
                app:iconTintMode="src_atop"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_gpay_logo"
                app:iconPadding="7dp"
                app:iconGravity="textEnd"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:backgroundTint="@android:color/darker_gray"
                android:layout_marginStart="38dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_bottomsheet_total_tickets_count"
                app:layout_constraintEnd_toStartOf="@+id/mb_bottomsheet_go_to_pay"
                android:onClick="@{(view)->viewModel.onClick(view)}"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/mb_bottomsheet_go_to_pay"
                android:text="@string/pay"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_medium"
                android:letterSpacing="0"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:backgroundTint="@android:color/darker_gray"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintStart_toEndOf="@+id/mb_bottomsheet_g_pay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:onClick="@{(view)->viewModel.onClick(view)}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>