<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="ru.android.romashkaapp.sector_seat.SectorSeatViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2"
        tools:context=".ru.android.romashkaapp.sector_seat.SectorSeatFragment">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_close"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/close"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@android:color/darker_gray"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mb_price"
            app:icon="@drawable/ic_circle"
            app:iconTint="#E5F1FF"
            app:iconTintMode="multiply"
            app:iconGravity="textStart"
            app:iconPadding="7dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:strokeWidth="2dp"
            app:cornerRadius="8dp"
            app:strokeColor="@android:color/white"
            android:text="500 Р"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#0C233D"
            android:textSize="14sp"
            android:letterSpacing="0"
            android:paddingTop="7dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="7dp"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/white"
            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_close"
            android:onClick="@{(view)->viewModel.onClick(view)}"/>

        <TextView
            android:id="@+id/tv_current_sector_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:letterSpacing="0"
            android:text="Сектор 129"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mb_price" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mb_prev"
            app:icon="@drawable/ic_prev"
            app:iconTint="#E5F1FF"
            app:iconTintMode="multiply"
            app:iconGravity="start"
            app:iconPadding="7dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:strokeWidth="2dp"
            app:cornerRadius="8dp"
            app:strokeColor="@android:color/white"
            android:text="128"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#0C233D"
            android:textSize="14sp"
            android:letterSpacing="0"
            android:paddingTop="7dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="7dp"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/white"
            android:minHeight="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_current_sector_id"
            app:layout_constraintTop_toBottomOf="@+id/mb_price"
            android:onClick="@{(view)->viewModel.onClick(view)}"/>


        <WebView
            android:id="@+id/wv_stadium"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_current_sector_id"
            app:layout_constraintBottom_toTopOf="@+id/btn_plus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_plus"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ic_increase"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_minus"
            android:onClick="@{view->viewModel.zoomIn()}"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_minus"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/ic_reduce"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="@{view->viewModel.zoomOut()}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>