<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints">
    <data>
        <import type="android.view.View"/>
        <variable
            name="visibilityOfExistUser"
            type="Integer" />
        <variable
            name="visibilityOfNewUser"
            type="Integer" />
        <variable
            name="visibilityOfProgressBar"
            type="Integer" />
        <variable
            name="viewModel"
            type="ru.android.romashkaapp.signin.SignInViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ru.android.romashkaapp.signin.SignInFragment">

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mb_upload_photo"
            android:backgroundTint="@android:color/transparent"
            app:strokeColor="@android:color/transparent"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:fontFamily="@font/pfbeauaanspro_reg"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="17dp"
            android:paddingEnd="17dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:strokeWidth="1dp"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:text="@string/upload_photo"
            android:layout_marginTop="16dp"
            android:layout_marginStart="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mb_make_photo"
            android:backgroundTint="@android:color/transparent"
            app:strokeColor="@android:color/transparent"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:fontFamily="@font/pfbeauaanspro_reg"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="17dp"
            android:paddingEnd="17dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:strokeWidth="1dp"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:text="@string/make_a_photo"
            android:layout_marginTop="5dp"
            android:layout_marginStart="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mb_upload_photo"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mb_remove_photo"
            android:backgroundTint="@android:color/transparent"
            app:strokeColor="@android:color/transparent"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:fontFamily="@font/pfbeauaanspro_reg"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="17dp"
            android:paddingEnd="17dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:strokeWidth="1dp"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:text="@string/delete_a_photo"
            android:layout_marginTop="5dp"
            android:layout_marginStart="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mb_make_photo"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mb_cancel"
            android:backgroundTint="@android:color/transparent"
            app:strokeColor="@android:color/transparent"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:fontFamily="@font/pfbeauaanspro_reg"
            android:paddingTop="10dp"
            android:paddingBottom="23dp"
            android:paddingStart="17dp"
            android:paddingEnd="17dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:strokeWidth="1dp"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:text="@string/cancel"
            android:layout_marginTop="5dp"
            android:layout_marginStart="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mb_remove_photo"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>