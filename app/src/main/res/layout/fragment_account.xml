<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints">
    <data>
        <import type="android.view.View"/>
        <variable
            name="visibilityOfExistUser"
            type="Integer" />
        <variable
            name="visibilityOfNewUser"
            type="Integer" />
        <variable
            name="visibilityOfProgressBar"
            type="Integer" />
        <variable
            name="viewModel"
            type="ru.android.romashkaapp.signin.SignInViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ru.android.romashkaapp.signin.SignInFragment">

        <ImageView
            android:id="@+id/iv_toolbar"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="179dp"
            android:background="@drawable/rectangle_white_with_round_top_corners"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:visibility="@{visibilityOfNewUser}"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="142dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/pfbeausanspro_bold"
            android:text="@string/sign_in_or_sign_up"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:gravity="start"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/iv_card"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:visibility="@{visibilityOfNewUser}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mb_create_account"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            app:strokeColor="@color/colorPrimary"
            android:text="@string/create_account"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:letterSpacing="0"
            android:fontFamily="@font/pfbeauaanspro_reg"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toStartOf="@+id/mb_sign_in"
            app:layout_constraintTop_toTopOf="@+id/iv_card"
            app:layout_constraintBottom_toBottomOf="@+id/mb_sign_in"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:visibility="@{visibilityOfNewUser}"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mb_sign_in"
            android:text="@string/sign_in"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/pfbeauaanspro_reg"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="17dp"
            android:paddingEnd="17dp"
            android:layout_marginBottom="24dp"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mb_create_account"
            app:layout_constraintTop_toTopOf="@+id/iv_card"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mb_help"
            app:icon="@drawable/ic_help"
            app:iconTint="@android:color/transparent"
            app:iconTintMode="src_atop"
            app:iconPadding="16dp"
            android:text="@string/help"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:fontFamily="@font/pfbeauaanspro_reg"
            android:letterSpacing="0"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:backgroundTint="@android:color/transparent"
            app:cornerRadius="0dp"
            app:strokeWidth="0dp"
            app:strokeColor="@android:color/transparent"
            android:layout_marginStart="3dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mb_sign_in"
            android:onClick="@{(view)->viewModel.onClick(view)}"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mb_about_app"
            app:icon="@drawable/ic_about_app"
            app:iconTint="@android:color/transparent"
            app:iconTintMode="src_atop"
            app:iconPadding="16dp"
            android:text="@string/about_app"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:fontFamily="@font/pfbeauaanspro_reg"
            android:letterSpacing="0"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:backgroundTint="@android:color/transparent"
            app:cornerRadius="0dp"
            app:strokeWidth="0dp"
            app:strokeColor="@android:color/transparent"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mb_help"
            android:onClick="@{(view)->viewModel.onClick(view)}"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mb_support"
            app:icon="@drawable/ic_support_phone"
            app:iconTint="@android:color/transparent"
            app:iconTintMode="src_atop"
            app:iconPadding="16dp"
            android:text="@string/support_phone"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:fontFamily="@font/pfbeauaanspro_reg"
            android:lineSpacingExtra="8dp"
            android:letterSpacing="0"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:backgroundTint="@color/background"
            app:cornerRadius="8dp"
            app:strokeWidth="0dp"
            app:strokeColor="@android:color/transparent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="@{(view)->viewModel.onClick(view)}"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:visibility="@{visibilityOfExistUser}"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/civ_photo"
            app:srcCompat="@drawable/ic_photo"
            android:scaleType="center"
            app:strokeColor="#F3F5FB"
            app:strokeWidth="2dp"
            app:shapeAppearanceOverlay="@style/circleImageView"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingStart="1dp"
            android:paddingEnd="1dp"
            android:layout_marginBottom="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/mb_edit_user"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mb_edit_user"
            app:icon="@drawable/ic_edit"
            app:iconTint="@android:color/transparent"
            app:iconTintMode="src_atop"
            app:iconPadding="8dp"
            app:iconGravity="textEnd"
            android:text="Константин Варламов"
            tools:text="Константин Варламов"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:fontFamily="@font/pfbeauaanspro_reg"
            android:letterSpacing="0"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:backgroundTint="@android:color/transparent"
            app:cornerRadius="0dp"
            app:strokeWidth="0dp"
            app:strokeColor="@android:color/transparent"
            android:layout_marginStart="3dp"
            android:layout_marginTop="53dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_card"
            android:onClick="@{(view)->viewModel.onClick(view)}"/>

<!--        android:text="@{viewModel.name}"-->

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mb_history"
            app:icon="@drawable/ic_history"
            app:iconTint="@android:color/transparent"
            app:iconTintMode="src_atop"
            app:iconPadding="16dp"
            android:text="@string/history"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:fontFamily="@font/pfbeauaanspro_reg"
            android:letterSpacing="0"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:backgroundTint="@android:color/transparent"
            app:cornerRadius="0dp"
            app:strokeWidth="0dp"
            app:strokeColor="@android:color/transparent"
            android:layout_marginStart="3dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mb_edit_user"
            android:onClick="@{(view)->viewModel.onClick(view)}"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mb_logout"
            app:icon="@drawable/ic_log_out"
            app:iconTint="@android:color/transparent"
            app:iconTintMode="src_atop"
            android:minWidth="0dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:backgroundTint="@android:color/transparent"
            app:strokeColor="@android:color/transparent"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{(view)->viewModel.onClick(view)}"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>