<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="ru.android.romashkaapp.stadium.StadiumViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2"
        tools:context=".ru.android.romashkaapp.stadium.StadiumFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cl_toolbar"
            android:background="@drawable/cell_shape_toolbar_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/ib_back"
                android:background="@drawable/ic_arrow_back"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_event_title"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textAlignment="textStart"
                android:text="Инфоматика-Владивосток"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintStart_toEndOf="@+id/ib_back"
                app:layout_constraintEnd_toStartOf="@+id/iv_expand"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_expand"
                android:src="@drawable/ic_expand_more"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_event_date"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:textAlignment="viewStart"
                android:text="17 ОКТЯБРЯ  ЧТ 18:00"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintStart_toEndOf="@+id/ib_back"
                app:layout_constraintStart_toStartOf="@+id/tv_event_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_event_title"/>

            <TextView
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_event_place"
                android:textSize="14sp"
                android:textColor="@color/button_next_color"
                android:textAlignment="center"
                android:text="Казань Арена, г. Казань"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toStartOf="@+id/ib_settings"
                app:layout_constraintStart_toEndOf="@+id/ib_back"
                app:layout_constraintTop_toBottomOf="@+id/tv_event_date"/>

            <TextView
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_event_type"
                android:textSize="14sp"
                android:textColor="@color/button_next_color"
                android:textAlignment="center"
                android:text="Тинькофф Российская Премьер-Лига"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toStartOf="@+id/ib_settings"
                app:layout_constraintStart_toEndOf="@+id/ib_back"
                app:layout_constraintTop_toBottomOf="@+id/tv_event_place"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mb_filters"
            app:icon="@drawable/ic_filters"
            app:iconTint="#E5F1FF"
            app:iconTintMode="multiply"
            app:iconGravity="textEnd"
            app:iconPadding="7dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:strokeWidth="2dp"
            app:cornerRadius="8dp"
            app:strokeColor="@android:color/white"
            android:text="@string/filters"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#0C233D"
            android:textSize="14sp"
            android:letterSpacing="0"
            android:paddingTop="7dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="7dp"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/white"
            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_toolbar"
            android:onClick="@{(view)->viewModel.onClick(view)}"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mb_prices"
            app:icon="@drawable/ic_rub"
            app:iconTint="#E5F1FF"
            app:iconTintMode="multiply"
            app:iconGravity="textEnd"
            app:iconPadding="5dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:strokeWidth="2dp"
            app:cornerRadius="8dp"
            app:strokeColor="@android:color/white"
            android:text="@string/prices"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#0C233D"
            android:textSize="14sp"
            android:paddingTop="9dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="9dp"
            android:textAllCaps="false"
            android:letterSpacing="0"
            android:backgroundTint="@android:color/white"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:minWidth="0dp"
            app:layout_constraintStart_toEndOf="@+id/mb_filters"
            app:layout_constraintTop_toBottomOf="@+id/cl_toolbar"
            android:onClick="@{(view)->viewModel.onClick(view)}"/>

        <WebView
            android:id="@+id/wv_stadium"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toBottomOf="@+id/mb_filters"
            app:layout_constraintBottom_toTopOf="@+id/btn_plus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_plus"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ic_increase"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_minus"
            android:onClick="@{view->viewModel.zoomIn()}"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_minus"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/ic_reduce"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="@{view->viewModel.zoomOut()}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>