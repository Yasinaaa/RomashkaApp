<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="ru.android.romashkaapp.signin.SignInViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".ru.android.romashkaapp.signin.SignInFragment">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ib_back"
            android:background="@drawable/ic_back_24"
            android:layout_marginTop="44dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textAlignment="viewStart"
            android:text="@string/help"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="40dp"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="16dp"
            android:padding="0dp"
            app:layout_constraintStart_toEndOf="@+id/ib_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mb_how_to_buy"
            app:icon="@drawable/ic_how_to_buy"
            app:iconTint="#E5F1FF"
            app:iconTintMode="multiply"
            app:iconGravity="textTop"
            app:iconPadding="16dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:backgroundTint="@android:color/white"
            app:strokeWidth="2dp"
            app:cornerRadius="8dp"
            app:strokeColor="@android:color/transparent"
            android:text="@string/how_to_buy"
            android:fontFamily="@font/pfbeauaanspro_reg"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:letterSpacing="0"
            android:paddingTop="14dp"
            android:paddingBottom="12dp"
            android:textAllCaps="false"
            android:layout_marginTop="25dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintEnd_toStartOf="@+id/mb_purchase_rules"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="@{(view)->viewModel.onClick(view)}"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mb_purchase_rules"
            app:icon="@drawable/ic_purchase_rules"
            app:iconTint="#E5F1FF"
            app:iconTintMode="multiply"
            app:iconGravity="textTop"
            app:iconPadding="16dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:backgroundTint="@android:color/white"
            app:strokeWidth="2dp"
            app:cornerRadius="8dp"
            app:strokeColor="@android:color/transparent"
            android:text="@string/purchase_rules"
            android:fontFamily="@font/pfbeauaanspro_reg"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:letterSpacing="0"
            android:paddingTop="14dp"
            android:paddingBottom="12dp"
            android:textAllCaps="false"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mb_how_to_buy"
            android:onClick="@{(view)->viewModel.onClick(view)}"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mb_return_ticket"
            app:icon="@drawable/ic_return_ticket"
            app:iconTint="#E5F1FF"
            app:iconTintMode="multiply"
            app:iconGravity="textTop"
            app:iconPadding="16dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:backgroundTint="@android:color/white"
            app:strokeWidth="2dp"
            app:cornerRadius="8dp"
            app:strokeColor="@android:color/transparent"
            android:text="@string/return_tickets"
            android:fontFamily="@font/pfbeauaanspro_reg"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:letterSpacing="0"
            android:paddingTop="14dp"
            android:paddingBottom="12dp"
            android:textAllCaps="false"
            android:layout_marginTop="25dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/mb_how_to_buy"
            app:layout_constraintEnd_toStartOf="@+id/mb_contacts"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="@{(view)->viewModel.onClick(view)}"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mb_contacts"
            app:icon="@drawable/ic_contacts"
            app:iconTint="#E5F1FF"
            app:iconTintMode="multiply"
            app:iconGravity="textTop"
            app:iconPadding="16dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:backgroundTint="@android:color/white"
            app:strokeWidth="2dp"
            app:cornerRadius="8dp"
            app:strokeColor="@android:color/transparent"
            android:text="@string/contacts"
            android:fontFamily="@font/pfbeauaanspro_reg"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:letterSpacing="0"
            android:paddingTop="14dp"
            android:paddingBottom="12dp"
            android:textAllCaps="false"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mb_how_to_buy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mb_return_ticket"
            android:onClick="@{(view)->viewModel.onClick(view)}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>